@using KryptonitenBlog.Entities;
@using Blogger.Models

 <!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>KRYPTONITEN BLOG</title>
    <!--   CSS AND SCRIPTS -->

    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/FontAwesome/css/all.css" rel="stylesheet" />
    <!--   CSS AND SCRIPTS -->


</head>

<body>
  

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color:black;">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">
            <i class="fas fa-balance-scale"></i> &nbsp; Kryptoniten Blog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mr-auto">
                    @if (SessionManager.User != null)
                    {

                        <li class="nav-item">
                            <a class="nav-link" href="#">
                              
                            </a>
                        </li>

                        <li class="dropdown">
                            <a class="nav-link dropdown-toggle" href="/Note/MyNotes " id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-cog"></i>&nbsp;Yönetim
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Note/Create"> <i class="fas fa-plus"></i>&nbsp;Not Ekle</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Note/Index"> <i class="fas fa-align-justify"></i>&nbsp;Yazılarım</a>
                                <a class="dropdown-item" href="/Note/MyLikedNotes"> <i class="fas fa-thumbs-up"></i>&nbsp;Beğendiklerim</a>
                                @if (SessionManager.User.IsAdmin)
                                {
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Category/Create"> <i class="fas fa-plus"></i>&nbsp;Kategori Ekle</a>
                                    <a class="dropdown-item" href="/Category/Index"> <i class="fas fa-align-justify"></i>&nbsp;Kategoriler</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/BlogUser/Create"> <i class="fas fa-plus"></i>&nbsp;Kullanıcı Ekle</a>
                                    <a class="dropdown-item" href="/BlogUser/Index"> <i class="fas fa-user"></i>&nbsp;Kullanıcılar</a>

                                }


                            </div>
                        </li>

                    }
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/MostLiked">
                            <i class="fas fa-heart"></i> &nbsp;En Beğenilenler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">
                            <i class="fas fa-align-justify"> </i> &nbsp; Son Yazılanlar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">
                            <i class="fas fa-address-card"></i>&nbsp;Hakkımızda
                        </a>
                    </li>


                </ul>
                <ul class="nav navbar-nav navbar-right dropdown">
                    @if (SessionManager.User == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Login">
                                <i class="fas fa-sign-in-alt"></i> &nbsp;Giriş
                            </a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Register">
                                <i class="fas fa-user"></i>&nbsp;Üye ol
                            </a>
                        </li>

                    }
                    else
                    {
                        <li>
                            <a class="nav-link" href="/Home/ShowProfile">
                                <i class="fas fa-user"></i>&nbsp;@SessionManager.User.Username;
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Logout">
                                <i class="fas fa-sign-out-alt"></i>&nbsp;Çıkış yap
                            </a>
                        </li>
                    }

                </ul>
                
                

                  

                
</div>
        </div>
    </nav>

    <!-- Page Content -->
    @RenderBody()
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-3" style="background-color:black;">
        <div class="container">
            <p class="m-0 text-center text-white">Powered By Kryptoniten - 2020 &copy;</p>
        </div>
        <!-- /.container -->
    </footer>




</body>

</html>
