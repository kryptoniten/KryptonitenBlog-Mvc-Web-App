@using KryptonitenBlog.BusinessLayer
@using KryptonitenBlog.Entities
@using Blogger.Models;
@{
    List<Category> list = CacheHelper.GetCategoriesFromCache();

}

<h1 class="my-4">Kategoriler</h1>
<div class="list-group">
    <a href="@Url.Action("Index","Home")" class="list-group-item list-group-item-light text-dark text-center">Tümü</a>

    @foreach (Category cat in list)
    {
        <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item list-group-item-light text-dark text-lg-left"><span class="fas fa-arrow-right" style="margin-right:5px;"></span>@cat.Title</a>

    }
</div>