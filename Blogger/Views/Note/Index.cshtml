@model IEnumerable<KryptonitenBlog.Entities.Note>

@{
    ViewBag.Title = "Index";
}
    <div class="container">
        <br />

        <h1 class="text-center">Yazılarım</h1>

        <p>
            @Html.ActionLink("Yeni Yazı", "Create", null, new { @class = "btn btn-success btn-sm" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDraft)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LikeCount)
                </th>



                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDraft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LikeCount)
                    </td>



                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })<br /><br />
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })<br /><br />
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })<br /><br />
                    </td>

                </tr>
            }

        </table>



    </div>




<script>
    $(function () {
        $("footer").hide();

    });


</script>





