@using KryptonitenBlog.Entities.ValueObjects
@model RegisterViewModel
@{
    ViewBag.Title = "Kryptoniten Blog Kayıt Sayfası";


}
<link href="~/Content/Login-Register.css" rel="stylesheet" />
     





@using (Html.BeginForm())
{
    <body id="LoginForm">
        <div class="container">
            <h1 class="form-heading">Kayıt Ol</h1>


            <div class="login-form">
                <div class="main-div">
                    <div class="panel">
                        <h2>Lütfen Giriş Yapınız..</h2>
                        <p>E-Mail Adresinizi ve Şifrenizi Giriniz </p>

                        @Html.ValidationSummary(false)
                    </div>
                    <form id="Login">

                        <div class="form-group">

                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adınız.." })

                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-Posta Adresiniz...  " })

                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifreniz... ", type = "password" })

                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Şifrenizi Tekrar giriniz...", type = "password" })

                        </div>

                        <button type="submit" class="btn btn-primary">Kayıt Ol</button>

                    </form>

                </div>


            </div>
        </div>
    </body>

}

<script>
    $(function () {
        $("footer").hide();

    });


</script>

